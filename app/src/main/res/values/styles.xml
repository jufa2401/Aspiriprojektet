<resources>

    <!--Default style-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!--Colors-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:colorForeground">@android:color/background_dark</item>
        <item name="android:navigationBarColor">@android:color/background_dark</item>
        <item name="android:textColorPrimary">@android:color/background_light</item>


        <!--Text-->
        <item name="android:textSize">15sp</item>
    </style>


    <!-- Dette refererer til hele appbaren (titelbaren for appen) -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <!-- Popup er temaet for f.eks når vi trykker på de 3 prikker i øverste højre hjørne. -->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
