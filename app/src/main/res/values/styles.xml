<resources>

    <!--Default style-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!--Colors-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorForeground">@android:color/background_dark</item>
        <item name="android:navigationBarColor">@android:color/background_dark</item>
        <item name="android:textColorPrimary">@android:color/background_light</item>
        <!--Icon-->
        <item name="navigationIcon">@drawable/ic_back_arrow</item>
    </style>

    <!--TextSize-->
    <style name="subjectTextView">
        <item name="android:textSize">15sp</item>
    </style>

    <!--Centered imageviews with padding-->
    <style name="subjectImageView">
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <!--Gray lines act as spacers-->
    <style name="subjectSpacerView">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <!--Standardized padding for all in linear layouts-->
    <style name="subjectLinearLayout">
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">20dp</item>
    </style>



    <!-- Dette refererer til hele appbaren (titelbaren for appen) -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <!-- Popup er temaet for f.eks når vi trykker på de 3 prikker i øverste højre hjørne. -->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
