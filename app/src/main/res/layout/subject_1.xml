<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.s165158.aspiri.ListViewOnClick"
    tools:layout_editor_absoluteY="25dp">


    <!--Title-->
    <TextView
        android:id="@+id/subject_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="16dp"
        android:text="title1"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="Subject Picture"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="2dp"
        android:src="@android:drawable/star_big_on"
        app:layout_constraintBottom_toTopOf="@+id/subject_bread_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subject_title" />

    <TextView
        android:id="@+id/subject_bread_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum Lorem ipsum some more Lorem ipsum some more Lorem ipsum some more Lorem ipsum some more Lorem ipsum some more Lorem ipsum some more Lorem ipsum some more Lorem ipsum some more Lorem ipsum some more some more Lorem ipsum some more Lorem ipsum some more Lorem ipsum some more Lorem ipsum some more Lorem ipsum some more Lorem ipsum some more Lorem ipsum some more "
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView1" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="231dp"
        android:layout_marginEnd="47dp"
        android:layout_marginStart="47dp"
        android:contentDescription="Subject Picture"
        android:src="@android:drawable/star_big_off"
        app:layout_constraintBottom_toTopOf="@+id/subject_bread_text2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subject_bread_text" />

    <TextView
        android:id="@+id/subject_bread_text2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Lorem ipsum some more Lorem ipsum some more Lorem ipsum some more Lorem ipsum some more Lorem ipsum some more Lorem ipsum some more Lorem ipsum some more Lorem ipsum some more "
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

</android.support.constraint.ConstraintLayout>
