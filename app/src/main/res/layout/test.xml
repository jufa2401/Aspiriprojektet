<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="vertical">

        <!--Spacer-->
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            style="@style/subjectSpacerView" />

        <!--First test-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold" />

        <!--Header-->
        <TextView
            android:id="@+id/subject_fragment_title"
            style="@style/subjectTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Title_Teori"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="25sp" />
        <!--The subject-->
        <TextView
            android:id="@+id/subject_fragment_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sample_subject"/>


        <!--Intro text-->
        <TextView
            android:id="@+id/subject_fragment_intro"
            style="@style/subjectTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Kvartratsætninger_intro"/>

        <!--Table 1-->
        <ImageView
            android:id="@+id/subject_fragment_picture_1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            style="@style/subjectImageView"
            android:src="@drawable/kvartratsaetninger_table1" />


        <!--Sum på kvadrat-->
        <TextView
            android:id="@+id/subject_fragment_text_following_picture_1"
            style="@style/subjectTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Kvartratsætninger_sum_1"/>

        <!--Table 2-->
        <ImageView
            android:paddingTop="10dp"
            android:id="@+id/subject_fragment_picture_2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/kvartratsaetninger_table2" />


        <!--Differens-->
        <TextView
            android:id="@+id/subject_fragment_text_following_picture_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Kvartratsætninger_difference_1"/>

        <!--Differens 2-->

        <!--Eksempel-->
        <!--Begge regler kan bruges-->

        <!---->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Kvartratsætninger_problem1_2"/>

            <katex.hourglass.in.mathlib.MathView
                android:id="@+id/subject_fragment_math_view_1"
                app:setTextColor="@android:color/black"
                app:setTextSize="12sp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="30dp"
                android:text="@string/Kvartratsætninger_problem1_4" />

            <katex.hourglass.in.mathlib.MathView
                android:id="@+id/subject_fragment_math_view_2"
                app:setTextColor="@android:color/black"
                app:setTextSize="12sp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Kvartratsætninger_problem1_5" />

            <katex.hourglass.in.mathlib.MathView
                android:id="@+id/subject_fragment_math_view_3"
                app:setTextColor="@android:color/black"
                app:setTextSize="12sp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="30dp"
                android:text="@string/Kvartratsætninger_problem1_8" />

            <katex.hourglass.in.mathlib.MathView
                android:id="@+id/subject_fragment_math_view_4"
                app:setTextColor="@android:color/black"
                app:setTextSize="12sp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Kvartratsætninger_problem1_10"
                android:textStyle="italic" />

            <ImageView
                android:id="@+id/imageview_company_logo"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:adjustViewBounds="true"
                android:paddingBottom="10dp"
                android:paddingTop="21dp"
                android:scaleType="fitCenter"
                android:src="@drawable/kvartratsaetninger_table4" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/subject_fragment_game_button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:padding="20dp"
            android:visibility="gone">


            <LinearLayout
                android:id="@+id/subject_fragment_game_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@drawable/shadow"
                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="horizontal"
                android:padding="7dp">


                <ImageView
                    android:id="@+id/subject_fragment_game_thumb"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:contentDescription="@string/empty_description" />


                <TextView
                    android:id="@+id/subject_fragment_game_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"

                    android:textColor="#000000"
                    android:textSize="18sp" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</ScrollView>