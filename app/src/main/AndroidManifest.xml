<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aspiri.karakterloeft">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/aspiri"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/aspiri"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Main -->
        <activity android:name=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:configChanges="orientation|keyboardHidden"
                android:screenOrientation="portrait"
                android:value="MainActivity" />

            <intent-filter>

                <!-- Usermade -->
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />


                <!-- Firebase -->
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="aspiri.dk"
                    android:scheme="http" />
                <data
                    android:host="aspiri.dk"
                    android:scheme="https" />
            </intent-filter>
        </activity>

        <!-- Flipcard Activity -->
        <activity android:name=".games.FlipcardActivity" />

        <!-- Settings Activity -->
        <activity android:name=".SettingsActivity" android:theme="@style/SettingsTheme">
        </activity>



    </application>

</manifest>