<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.aspiri.karakterloeft">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/aspiri"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/aspiri"
        android:theme="@style/AppTheme"
        tools:replace ="android:label">

        <!-- Main -->
        <activity android:name=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:configChanges="orientation|keyboardHidden"
                android:screenOrientation="portrait"
                android:value=".MainActivity" />

            <intent-filter>

                <!-- Usermade -->
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
               <intent-filter>
                <!-- Firebase -->
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="aspiri.dk"
                    android:scheme="http" />
                <data
                    android:host="aspiri.dk"
                    android:scheme="https"/>
               </intent-filter>

        </activity>

        <!-- Test activiy 2 -->
        <activity android:name=".games.FlipcardActivity"></activity>
        <activity android:name=".games.flipcards.FlipcardSubjectList"></activity>

    </application>

</manifest>